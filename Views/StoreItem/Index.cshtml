@model IEnumerable<StoreItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="borderxxx p-3 m-5">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-info"> Store Item List</h2>
            </div>
            <div class="col-md-6 text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>

        <br />

        <div>
            @if (Model.Count() > 0)
            {

                <table class="table table-striped border m-3">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.SubCategoryId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.CategoryId)
                        </th>

                        <th></th>
                        <th></th>

                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(m => item.Price)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(m => item.Quantity)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(m => item.SubCategoryId)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(m => item.SubCategoryId)
                            </td>

                            <td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </td>

                        </tr>
                    }

                </table>
            }
            else
            {
                <p> No Item Exist...</p>
            }
        </div>

    </div>

